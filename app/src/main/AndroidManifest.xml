<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appdev.playover">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name = "android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name="appdev.playover.broadcast_receivers.AlarmReceiver"
            android:enabled="true"
            android:exported="false"></receiver>

        <receiver
            android:name="appdev.playover.broadcast_receivers.MyNotificationPublisher"
            android:enabled="true"
            android:exported="false"></receiver>

        <activity
            android:name="appdev.playover.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="appdev.playover.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appdev.playover.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appdev.playover.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appdev.playover.CheckIn"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity
            android:name="appdev.playover.NoInternet"
            android:screenOrientation="portrait" />
        <activity
            android:name="appdev.playover.Buddies_Activity"
            android:screenOrientation="portrait" />
        <activity android:name="appdev.playover.MessagingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.playover_SHOW_MESSAGES"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="appdev.playover.Discounts"
            android:screenOrientation="portrait" />

        <receiver android:name="appdev.playover.broadcast_receivers.InternetBroadcastReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANG" />
            </intent-filter>
        </receiver>

        <service
            android:name="appdev.playover.Notifications"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_message" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/channel_default_id" />

    </application>

</manifest>